{
    "services": [
        {
            "name": "MQTT Fieldstrength Ingester",
            "type": "heartbeat",
            "path": "/logs/components/mqtt-fieldstrength-ingester/heartbeat.log",
            "max_delay_minutes": 2,
            "log_path": "/logs/components/mqtt-sensor-ingester/mqtt-fieldstrength-ingester.log"
        },
        {
            "name": "MQTT Sensor Ingester",
            "type": "heartbeat",
            "path": "/logs/components/mqtt-sensor-ingester/heartbeat.log",
